<?xml version="1.0"?>
<robot  xmlns:xacro="http://www.ros.org/wiki/xacro">
	
	<xacro:macro name="rotatum_arm" params="parent prefix *origin">

		<joint name="joint0" type="fixed">
    			<xacro:insert_block name="origin" />
    			<parent link="${parent}"/>
    			<child link="link1" />
  		</joint>

		<link name="link1">
		    <visual>
		      <geometry>
			     <!--- 0.0 0 -0.04  1.5708 3.14159-->
		       <mesh filename="package://rotatum_arm_description/cad/joint1_jet.dae"/>
		      </geometry>
		    <origin xyz = "0.0 0 0 " rpy = " 0 0 3.14159"/>
		    </visual>
		</link>
		
		<joint name="joint1" type="revolute">
		    <axis xyz="0 0 -1"/>
		    <limit effort = "1000.0" lower = "-3.14" upper = "3.14159" velocity = "50"/>
		    <parent link="link1"/>
		    <child link="link2"/>
		    <origin xyz= "0 0 0.15756" rpy = "0 0 0"/>  
		</joint>

		<link name="link2">
		    <visual>
		      <geometry>
		       <mesh filename="package://rotatum_arm_description/cad/joint2.dae"/>
		      </geometry>
		    <origin xyz = "0.0 0 -0.06096 " rpy = " 0 0 1.5708"/>
		    </visual>
		</link>
		
		<joint name="joint2" type="revolute">
		    <axis xyz="0 0 -1"/>
		    <limit effort = "1000.0" lower = "-3.14" upper = "3.14159" velocity = "50"/>
		    <parent link="link2"/>
		    <child link="link3"/>
		    <origin xyz= "0 0 -0.001" rpy = "0 1.5708 1.5708"/>  
		</joint>

		<link name="link3">
		    <visual>
		      <geometry>
		       
		       <mesh filename="package://rotatum_arm_description/cad/joint3.dae"/>
		      </geometry>
		    <origin xyz = "0.0 0 0.03256 " rpy = " 0 -1.5708 0"/>
		    </visual>
		</link>
		
		<joint name="joint3" type="revolute">
		    <axis xyz=" 0 0 1"/>
		    <limit effort = "1000.0" lower = "-3.14" upper = "3.14159" velocity = "50"/>
		    <parent link="link3"/>
		    <child link="link4"/>
		    <origin xyz= "  -0.1104 0 0   " rpy = "0 0 0"/>  
		</joint>

		<link name="link4">
		    <visual>
		      <geometry>
		       <!--- 0.0 0 -0.04 -->
		       <mesh filename="package://rotatum_arm_description/cad/joint4.dae"/>
		      </geometry>
		    <origin xyz = "0.0 0 0.03056 " rpy = " 0 -1.5708 0"/>
		    </visual>
		</link>
		
		<joint name="joint4" type="revolute">
		    <axis xyz=" 0 0 -1"/>
		    <limit effort = "1000.0" lower = "-3.14" upper = "3.14159" velocity = "50"/>
		    <parent link="link4"/>
		    <child link="link5"/>
		    <origin xyz= "-0.096 0 0.06462" rpy = "0 0 -1.5708"/>  
		</joint>

		<link name="link5">
		    <visual>
		      <geometry>
		       <!--- 0.0 0 -0.04 -->
		       <mesh filename="package://rotatum_arm_description/cad/joint5.dae"/>
		      </geometry>
		    <origin xyz = "0.0 0 -0.03356 " rpy = " 0 -1.5708 1.5708"/>
		    </visual>
		</link>
		
		<joint name="joint5" type="revolute">
		    <axis xyz="0 0 -1"/>
		    <limit effort = "1000.0" lower = "-3.14" upper = "3.14159" velocity = "50"/>
		    <parent link="link5"/>
		    <child link="link6"/>
		    <origin xyz= "0 -0.07318 0" rpy = "1.5708 -1.5708 0"/>  
		</joint>


		<link name="link6">
		    <visual>
		      <geometry>
		       <!--- 0.0 0 -0.04 -->
		       <mesh filename="package://rotatum_arm_description/cad/joint6.dae"/>
		      </geometry>
		    <origin xyz = "0 0.00 -0.038 " rpy = "0 0 3.14159"/>
		    </visual>
		</link>
		
		<joint name="joint6" type="revolute">
    			<axis xyz="0 0 1"/>
    			<limit effort = "1000.0" lower = "-3.14" upper = "3.14159" velocity = "50"/>
    			<parent link="link6"/>
    			<child link="link7"/>
    			<origin xyz= "0 -0.0456 0" rpy = "-1.5708 0 0"/>  
		</joint>

		<link name="link7">
		    <visual>
		      <geometry>
		       <!--- 0.0 0 -0.04 -->
		       <mesh filename="package://rotatum_arm_description/cad/joint7.dae"/>
		      </geometry>
		    <!-- origin xyz = "0.0 0 -0.012 " rpy = "0 0 0"/ -->
		    </visual>
		</link>

	</xacro:macro>
</robot>
